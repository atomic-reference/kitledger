{
	"compilerOptions": {
		"lib": ["DOM", "deno.ns"]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false,
		"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.json"]
	},
	"imports": {
		"@faker-js/faker": "npm:@faker-js/faker@^9.9.0",
		"@hono/hono": "jsr:@hono/hono@^4.8.4",
		"@node-rs/argon2": "npm:@node-rs/argon2@^2.0.2",
		"@std/assert": "jsr:@std/assert@1",
		"@std/path": "jsr:@std/path@^1.1.1",
		"@std/uuid": "jsr:@std/uuid@^1.0.9",
		"drizzle-kit": "npm:drizzle-kit@^0.31.4",
		"drizzle-orm": "npm:drizzle-orm@^0.44.2",
		"iovalkey": "npm:iovalkey@^0.3.3",
		"postgres": "npm:postgres@^3.4.7",
		"zod": "npm:zod@^4.0.5"
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"compile": "deno compile --output ./bin/kitledger --include ./src/database/migrations -A ./src/main.ts",
		"db:custom": "deno run -A npm:drizzle-kit generate --custom",
		"db:generate": "deno run -A npm:drizzle-kit generate",
		"dev": "deno run -A --watch --env-file ./src/main.ts",
		"format": "deno fmt",
		"test": "deno test --allow-all --unstable --coverage=./coverage",
		"typecheck": "deno check src/**/*.ts|*tsx"
	}
}